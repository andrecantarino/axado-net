@model axado.Models.Transportadora
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!--contact section-->
<section id="contact">
    <div class="container">
        <div class="left-title">
            <span class="left-line"></span>
            <h3 class="title">EDITAR TRANSPORTADORA</h3>
        </div>
        <div class="row">
            <div class="col-md-12 margin30">
                <p>(*) Campos obrigatórios</p>
                <div class="divide30"></div>
                <div id="message"></div>
                <div class="form-contact">
                    <form name="formContato" id="formContato" class="contact-form" method="post" action="">
                        <div class="row">
                            <div class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="row control-group">
                                    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 controls">
                                        <label>Nome da transportadora&nbsp;<span>*</span></label>
                                        <input type="text" class="form-control" placeholder="Nome" id="name" name="name" value="@Html.DisplayFor(model => model.name)" maxlength="200">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col col-xs-12 col-sm-12 col-md-8 col-lg-8">
                                <div class="row control-group">
                                    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 controls">
                                        <label>Razão Social&nbsp;<span>*</span></label>
                                        <input type="text" class="form-control" placeholder="Razão social" id="company_name" name="company_name" value="@Html.DisplayFor(model => model.company_name)" maxlength="200">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="row control-group">
                                    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 controls">
                                        <label>CNPJ&nbsp;<span>*</span></label>
                                        <input type="text" class="form-control" placeholder="CNPJ" id="cnpj" name="cnpj" data-cnpj="@Html.DisplayFor(model => model.cnpj)" value="">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                <div class="row control-group">
                                    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 controls">
                                        <label>Telefone&nbsp;<span>*</span></label>
                                        <input type="text" class="form-control telcliente" placeholder="Telefone" id="phone" name="phone" data-phone="@Html.DisplayFor(model => model.phone)" value="">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col col-xs-12 col-sm-12 col-md-8 col-lg-8">
                                <div class="row control-group">
                                    <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 controls">
                                        <label>Email&nbsp;<span>*</span></label>
                                        <input type="text" class="form-control" placeholder="Email" id="email" name="email" value="@Html.DisplayFor(model => model.email)" maxlength="200">
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12 text-right">
                                <a href="#" class="btn btn-primary btn-lg btn-salvar">Salvar</a>
                            </div>
                        </div>
                        <input type="hidden" id="cnpjHidden" name="cnpjHidden" value="@Html.DisplayFor(model => model.cnpj)" />
                        <input type="hidden" id="transportadoraId" name="transportadoraId" value="@Html.DisplayFor(model => model._id)" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/scripts/admin/transportadora/editar.js" type="text/javascript"></script>